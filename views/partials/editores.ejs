<div class="form-group row mb-3">
  <label class="col-form-label col-sm-2" for="account_no"
    >Account number:
  </label>
  <div class="col-sm-8">
    <input
      autofocus
      class="form-control"
      name="account_no"
      value="<%= accounts.account_no %>"
    />
  </div>
</div>

<div class="form-group row mb-3">
  <label class="col-form-label col-sm-2" for="client_id">Client id:</label>
  <div class="col-sm-7">
    <input
      class="form-control"
      name="client_id"
      value="<%= accounts.client_id %>"
    />
  </div>
</div>

<div class="form-group row mb-3">
  <label class="col-form-label col-sm-2" for="balance">Balance:</label>
  <div class="col-sm-10">
    <input
      class="form-control"
      name="balance"
      value="<%= accounts.balance %>"
    />
  </div>
</div>

<div class="form-group row mb-3">
  <label class="col-form-label col-sm-2" for="type">Type:</label>
  <div class="col-sm-10">
    <input class="form-control" name="type" value="<%= accounts.type %>" />
  </div>
</div>
