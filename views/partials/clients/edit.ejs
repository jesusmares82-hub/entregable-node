<div class="container mt-5">
  <h1 class="mb-3">Edit Client:</h1>
  <%- include ('../header') %>
  <form action="/clients/update/<%= clients.id %>" method="POST">
    <div class="form-horizontal mb-3">
      <%- include ('../editor') %>

      <div class="form-group row">
        <label class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
          <input
            type="submit"
            value="Update"
            class="btn btn-default btn-warning"
          />
          <a class="btn btn-outline-dark cancel" href="/clients">Cancel</a>
        </div>
      </div>
    </div>
  </form>
</div>
