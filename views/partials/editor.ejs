<div class="form-group row mb-3">
  <label class="col-form-label col-sm-2" for="Title">Nombre: </label>
  <div class="col-sm-8">
    <input
      autofocus
      class="form-control"
      name="first_name"
      value="<%= clients.first_name %>"
    />
  </div>
</div>

<div class="form-group row mb-3">
  <label class="col-form-label col-sm-2" for="last_name">Apellido:</label>
  <div class="col-sm-7">
    <input
      class="form-control"
      name="last_name"
      value="<%= clients.last_name %>"
    />
  </div>
</div>

<div class="form-group row mb-3">
  <label class="col-form-label col-sm-2" for="email">Email:</label>
  <div class="col-sm-10">
    <input class="form-control" name="email" value="<%= clients.email %>" />
  </div>
</div>

<div class="form-group row mb-3">
  <label class="col-form-label col-sm-2" for="phone">Phone:</label>
  <div class="col-sm-10">
    <input class="form-control" name="phone" value="<%= clients.phone %>" />
  </div>
</div>
